{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Area chart showing suspension trends in Australia by age group and gender.",
  "data": { "url": "data/SuspensionData.csv" },
  "background": "transparent",
  "config": { "view": { "stroke": null } },
  "params": [
    {
      "name": "ageGroupFilter",
      "value": "04-06 years",
      "bind": {
        "input": "select",
        "options": [
          "04-06 years",
          "07-09 years",
          "10-12 years",
          "13-16 years",
          "Over 16 years"
        ],
        "labels": [
          "4-6 years",
          "7-9 years",
          "10-12 years",
          "13-16 years",
          "Over 16 years"
        ],
        "name": "Age Group: "
      }
    },
    {
      "name": "gender_highlight",
      "select": { "type": "point", "fields": ["Gender"] },
      "bind": "legend"
    }
  ],
  "transform": [
    {
      "fold": [
        "2012", "2013", "2014", "2015", "2016", "2017",
        "2018", "2019", "2020", "2021", "2022", "2023"
      ],
      "as": ["Year", "Suspensions"]
    },
    {"calculate": "toNumber(datum.Suspensions)", "as": "Suspensions"},
    {"filter": "datum.Age_Group == ageGroupFilter"}
  ],
  "mark": { 
    "type": "area",
    "line": true,
    "point": true
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "labelAngle": -45,
        "labelFontSize": 11,
        "titleFontSize": 11,
        "titleFontWeight": "bold",
        "grid": false
      }
    },
    "y": {
      "field": "Suspensions",
      "type": "quantitative",
      "title": "Number of Suspensions",
      "scale": { "zero": true },
      "axis": {
        "labelFontSize": 11,
        "titleFontSize": 11,
        "titleFontWeight": "bold",
        "grid": false
      }
    },
    "color": {
      "field": "Gender",
      "type": "nominal",
      "title": "Gender",
      "scale": {
        "domain": ["Female", "Male"],
        "range": ["#0072B2", "#E69F00"]
      },
      "legend": {
        "labelFontSize": 11,
        "titleFontSize": 11
      }
    },
    "opacity": {
      "condition": { "param": "gender_highlight", "value": 0.6 },
      "value": 0.1
    },
    "tooltip": [
      {
        "field": "Age_Group",
        "type": "nominal",
        "title": "Age Group"
      },
      { "field": "Gender", "type": "nominal" },
      { "field": "Year", "type": "ordinal", "title": "Year" },
      { "field": "Suspensions", "type": "quantitative", "format": "," }
    ]
  },
  "width": 600,
  "height": 400
}