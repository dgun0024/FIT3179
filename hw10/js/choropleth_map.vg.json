{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Educational Spending per Student in Australian States and Territories in 2019",
    "fontSize": 24
  },
  "width": 1000,
  "height": 500,
  "projection": {
    "type": "mercator"
  },
  "resolve": {
    "scale": {
      "color": "independent"
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dgun0024/FIT3179/main/hw10/js/MapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "STE_2016_AUST"
        }
      },
      "transform": [
        {"calculate": "'Data is not available for ' + datum.properties.STE_NAME16", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dgun0024/FIT3179/main/hw10/js/MapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_10"
        }
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray", "strokeWidth": 0.5, "clip": true}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dgun0024/FIT3179/main/hw10/js/MapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "STE_2016_AUST"
        }
      },
      "transform": [
        {
          "lookup": "properties.STE_NAME16",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/dgun0024/FIT3179/refs/heads/main/hw10/data/BudgetPerStudent.csv",
              "format": {"type": "csv"}
            },
            "key": "FullStateName",
            "fields": ["State/Territory", "Spending Per Student"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Spending Per Student",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [15, 30],
            "range": ["#fee5d9", "#fcae91", "#fb6a4a", "#de2d26", "#a50f15"]
          },
          "legend": {
            "title": "Spending Per Student (AUD $)",
            "orient": "right",
            "offset": 10
          }
        },
        "tooltip": [
          {"field": "properties.STE_NAME16", "type": "nominal", "title": "State/Territory"},
          {"field": "Spending Per Student", "type": "quantitative", "title": "Spending Per Student (AUD $)", "format": ".2f"}
        ]
      }
    }
  ]
}